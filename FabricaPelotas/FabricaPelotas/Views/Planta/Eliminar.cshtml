@model FabricaPelotas.Models.Planta

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar Planta</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

       
        <div class="form-group">
            @Html.LabelFor(model => model.IdPlanta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idPlanta", (SelectList)ViewBag.cboPlanta, "Seleccione la Planta", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdPlanta, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Eliminar" class="btn btn-primary" />
            <a class="btn btn-primary" href="/Planta/Index" role="button">Volver</a>
        </div>
    </div>
}