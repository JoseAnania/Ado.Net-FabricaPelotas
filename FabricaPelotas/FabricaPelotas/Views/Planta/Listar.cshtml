@using FabricaPelotas.Models
@{
    ViewBag.Title = "Listar";
}

<h>Lista de Plantas</h>
<br />
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Planta</th>
                <th scope="col">Fábrica</th>
                <th scope="col">Color</th>
                <th scope="col">Superficie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (PlantaDto p in Model)
            {
                <tr>
                    <th scope="row">@p.IdPlanta</th>
                    <td>@p.NombrePlanta</td>
                    <td>@p.NombreFabrica</td>
                    <td>@p.NombreColor</td>
                    <td>@p.Superficie</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a class="btn btn-primary" href="/Planta/Index" role="button">Volver</a>
        </div>
    </div>
